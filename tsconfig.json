{
  "compilerOptions": {
    "strictNullChecks": false,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "alwaysStrict": true,
      "declaration": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "strict": true,
      "incremental": true,
      "lib": ["esnext"],
      "module": "commonjs",
      "moduleResolution": "node",
      "noUnusedLocals": false,
      "outDir": "./dist",
      "pretty": true,
      "removeComments": true,
      "resolveJsonModule": true,
      "sourceMap": true,
      "strictFunctionTypes": true,
      "strictBindCallApply": true,
      "target": "esnext",
      "types": ["node"],
      "rootDir": "src"
  },
  "exclude": ["node_modules", "test", "stuff"],
  "include": ["src/**/*"],
  "typedocOptions": {
      "out": "./docs/",
      "readme": "./README.md",
      "name": "snipe-it.ts",
      "exclude": ["**/node_modules/**"],
      "mode": "file",
      "excludeNotExported": true
  }
}